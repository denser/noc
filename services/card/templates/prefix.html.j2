<table class="table table-condensed table-hover">
<tbody>
    <tr>
        <th colspan="2">
            <a href="/api/card/view/vrf/{{ object.vrf.id }}/">{{ object.vrf.name }}</a> |
            IPv{{ object.afi }} |
            {% for p in path%}
            <a href="/api/card/view/prefix/{{ p.id }}/" title="{{ p.name }}">{{ p.prefix }}</a> |
            {% endfor %}
            {{ object.prefix }}
        </th>
    </tr>
    <tr>
        <th scope="row">{{ _("Name") }}</th>
        <td>{{object.name}}</td>
    <tr>
    <tr>
        <th scope="row">{{ _("Profile") }}</th>
        <td>{{object.profile.name}}</td>
    <tr>
    {% if object.asn %}
    <tr>
        <th scope="row">{{ _("AS") }}</th>
        <td>{% if object.asn.as_name %}{{object.asn.as_name}} (AS{{ object.asn.asn }}){% else %}AS{{ object.asn.asn }}{% endif %}</td>
    <tr>
    {% endif %}
    <tr>
        <th scope="row">{{ _("State") }}</th>
        <td>{{object.state.name}}</td>
    <tr>
    <tr>
        <th scope="row">{{ _("Description") }}</th>
        <td>{{object.description}}</td>
    <tr>
    <tr>
        <th scope="row">{{ _("Source") }}</th>
        <td>{{source}}</td>
    </tr>
</tbody>
</table>
{% if prefixes %}
<table class="table table-condensed table-hover">
<thead>
<tr>
    <th>Prefix</th>
    <th>AS</th>
</tr>
</thead>
<tbody>
{% for p in prefixes %}
    <tr>
        <td>
            <a href="/api/card/view/prefix/{{ p.id }}/">{{ p.prefix }}</a>
        </td>
        <td>{% if p.asn %}AS{{ p.asn.asn }}{% endif %}</td>
    </tr>
{% endfor %}
</tbody>
</table>
{% endif %}
{% if addresses %}
<table class="table table-condensed table-hover">
<thead>
<tr>
    <th>Address</th>
</tr>
</thead>
<tbody>
{% for a in addresses %}
    <tr>
        <td>
            <a href="/api/card/view/address/{{ a.id }}/">{{ a.address }}</a>
        </td>
    </tr>
{% endfor %}
</tbody>
</table>
{% endif %}
